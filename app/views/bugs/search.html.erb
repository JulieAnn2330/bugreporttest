<h2> Search Result </h2>

<%= link_to 'Show All', bugs_path, class:"btn btn-warning mb-3" %>
<br>
   <%= form_tag(search_path, :method => 'get') do %>
        <div class="input-group">
          <%= search_field_tag :search, params[:search], placeholder: "Bug Status" %>
        <div class='input-group-btn ms-2 mt-1'>
          <%= button_tag "Search By Status: Open, In Process, Closed", :class => 'btn btn-warning', :bug_status => nil %>
        </div>
        </div>
        <% end %>
        <br>

<table class="table table-striped table-bordered table-hover table-responsive">
  <thead class="table table-dark">
    <tr>
      <th>Report Timestamp</th>
      <th>Bug Status</th>
      <th>Title of Bug Report</th>
      <th>Reported By</th>
      <th>Hardware</th>
      <th>Operating System</th>
      <th>Severity</th>
      <th>QA Team Member</th>
      <th>Number of Reports</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |bug| %>
    
      <tr>
        <td><%= bug.created_at = bug.created_at.strftime("%m/%d/%Y %H:%M") %></td>
        <td><%= bug.bug_status%></td>
        <td><%= link_to bug.title_of_bug_report, bug %></td>
        <td><%= bug.user.email %></td>
        <td><%= bug.hardware %></td>
        <td><%= bug.browser %></td>
        <td><%= bug.severity %></td>
        <td><%= bug.qa_team_member %></td>
        <td><%= render 'index', bug: @bug %></td>
        </div>

        <% if bug.user == current_user %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


